{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Start React App",
			"type": "shell",
			"command": "npm",
			"args": [
				"run",
				"start"
			],
			"group": "build",
			"isBackground": true,
			"options": {
				"shell": {
					"executable": "cmd.exe"
				}
			}
		},
		{
			"label": "Install Dependencies",
			"type": "shell",
			"command": "npm",
			"args": [
				"install"
			],
			"options": {
				"shell": {
					"executable": "cmd.exe"
				}
			}
		},
		{
			"label": "Build for Production",
			"type": "shell",
			"command": "npm",
			"args": [
				"run",
				"build"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"options": {
				"shell": {
					"executable": "cmd.exe"
				}
			}
		}
	]
}